{
	"name": "21torr/prismic-api",
	"description": "Symfony API bundle for integration into Prismic.",
	"license": "MIT",
	"type": "symfony-bundle",
	"authors": [
		{
			"name": "21TORR",
			"homepage": "https://www.21torr.com/"
		}
	],
	"homepage": "https://github.com/21TORR/prismic-api",
	"require": {
		"php": ">= 8.1",
		"21torr/bundle-helpers": "^2.1",
		"21torr/cli": "^1.0",
		"21torr/html-builder": "^1.0",
		"psr/log": "^2.0 || ^3.0",
		"symfony/console": "^6.1",
		"symfony/event-dispatcher": "^6.1",
		"symfony/http-client": "^5.3 || ^6.1",
		"symfony/http-kernel": "^5.3 || ^6.1",
		"symfony/validator": "^6.1",
		"twig/twig": "^3.3"
	},
	"require-dev": {
		"bamarni/composer-bin-plugin": "^1.5",
		"roave/security-advisories": "dev-latest",
		"symfony/phpunit-bridge": "^6.1"
	},
	"autoload": {
		"psr-4": {
			"Torr\\PrismicApi\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\Torr\\PrismicApi\\": "tests/"
		}
	},
	"config": {
		"allow-plugins": {
			"bamarni/composer-bin-plugin": true,
			"ergebnis/composer-normalize": true,
			"phpstan/extension-installer": true
		},
		"sort-packages": true
	},
	"extra": {
		"branch-alias": {
			"dev-next": "4.x-dev"
		}
	},
	"scripts": {
		"post-install-cmd": [
			"@composer bin all install --ansi"
		],
		"post-update-cmd": [
			"@composer bin all update --ansi"
		]
	}
}
